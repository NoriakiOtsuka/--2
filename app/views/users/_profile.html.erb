<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
<table class="table">
	<tr>
		<th>name</th>
		<th><%= current_user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= current_user.introduction %></th>
	</tr>
	<tr>
		<th>follows</th>
		<th><%= link_to user.followings.count, following_user_path(user) %></th>
	</tr>
	<tr>
		<th>followers</th>
		<th><%= link_to user.followers.count, followers_user_path(user) %></th>
	</tr>
</table>

<% if user == current_user %>
	<div class="row">
		<%= link_to '',edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
	</div>
<% else %>
	<% unless current_user?(@user) %>
		<div id="follow_form">
			<% if current_user.following?(@user) %>
				<%= form_for(current_user.following_relationships.find_by(following_id: @user.id), method: :delete ) do |f| %>
	<%= f.submit "Unfollow", class: "btn btn-large follow-btn" %>
<% end %>
			<% else %>
				<%= form_for(current_user.following_relationships.build(following_id: @user.id)) do |f| %>
	<div><%= f.hidden_field :following_id %></div>
	<%= f.submit "Follow", class: "btn btn-large btn-primary follow-btn" %>
<% end %>

			<% end %>
		</div>
	<% end %>
<% end %>